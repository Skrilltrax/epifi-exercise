<resources>
    <!-- Base application theme. -->
    <style name="Theme.EpifiExercise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/plump_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fire_opal</item>
        <item name="colorSecondaryVariant">@color/fire_opal</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/davys_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="isLightTheme">false</item>


    </style>

    <style name="HeaderTextStyle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="DescriptionTextStyle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="LabelTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ClickableTextStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/plump_purple</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="HintDisabledTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    </style>
</resources>
